FROM golang:1.23

WORKDIR /

# Download Go modules
COPY go.mod go.sum ./
RUN go mod download

# Copy the source code
COPY . .

# Build
RUN go build -o cmd/microservices/players/microservice-players.exe cmd/microservices/players/main.go

# Expose ports
EXPOSE 8081
EXPOSE 50051/tcp

# Run
CMD ["/microservice-players"]